# TriSynq AI Website Environment Variables

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://trisynq.ai

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.trisynq.ai
API_SECRET_KEY=your-secret-key-here

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@trisynq.ai
SMTP_PASS=your-smtp-password
CONTACT_EMAIL=hello@trisynq.ai

# Database (if needed for future features)
DATABASE_URL=postgresql://user:password@localhost:5432/trisynq

# Xynergy Platform Integration
XYNERGY_API_KEY=your-xynergy-api-key
XYNERGY_ENDPOINT=https://api.xynergy.ai

# Authentication (for future admin features)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://trisynq.ai

# File Storage (if needed)
GOOGLE_CLOUD_STORAGE_BUCKET=trisynq-assets
GOOGLE_CLOUD_PROJECT_ID=trisynq-ai-website

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_STATS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security
ALLOWED_ORIGINS=https://trisynq.ai,https://www.trisynq.ai
CSP_REPORT_URI=/api/csp-report

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info